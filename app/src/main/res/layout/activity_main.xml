<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="0dp"
    app:layout_constraintRight_toRightOf="@+id/tableLayout">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <!--app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tableLayout"
        android:layout_marginEnd="8dp"-->

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:src="@drawable/ic_disaster"
                android:background="#FFF"
                android:onClick="naturalDisasters" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:src="@drawable/ic_information"
                android:background="#FFF"
                android:onClick="powerOutage" />
        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="0dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:src="@drawable/ic_checklist"
                android:background="#FFF"
                android:onClick="checklist" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:src="@drawable/ic_meet"
                android:background="#FFF"
                android:onClick="meetingPoints" />
        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="0dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:src="@drawable/ic_aid"
                android:background="#FFF"
                android:onClick="firstAid"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:src="@drawable/ic_map"
                android:background="#FFF"
                android:onClick="maps" />
        </TableRow>
        <TableRow>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:text="Nuclear Info"
                android:onClick="nuclear" />
        </TableRow>
    </TableLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
