<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="0dp"
    app:layout_constraintRight_toRightOf="@+id/tableLayout">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <!--app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tableLayout"
        android:layout_marginEnd="8dp"-->

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="0dp">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/disaster"
                android:onClick="naturalDisasters"
                android:text="STORM" />

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/flash"
                android:onClick="powerOutage"
                android:text="POWER OUTAGE" />
        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="0dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/checklist"
                android:onClick="checklist"
                android:text="CHECKLIST" />

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/meet"
                android:onClick="meetingPoints"
                android:text="EVACUATION POINTS" />
        </TableRow>

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="0dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/aid"
                android:onClick="firstAid"
                android:text="FIRST AID" />

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/map"
                android:onClick="maps"
                android:text="MAPS" />
        </TableRow>
    </TableLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
